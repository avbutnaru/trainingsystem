@model TrainingSystem.Models.RoadMainViewModel
@{
    ViewBag.Title = "Road";
}

<p class="text-success">@ViewBag.StatusMessage</p>

<div class="jumbotron">
    <h2>@Model.Road.Name</h2>
    <h3>&nbsp;&nbsp;&nbsp;&nbsp;&rArr;&nbsp;@Model.Road.RoadmapXRoads[0].RoadMap.Name</h3>
    <div style="padding-left: 20px;">
        <p>@Model.Road.Description</p>
    </div>
    <hr />
    @Html.ActionLink("Start Learning", "LearnRoad", "Learn", new { @id = Model.Road.Id }, new { @class = "btn btn-primary btn-lg" })
    <hr />
    @{
        if (Model.Road.RoadXRoadSteps.Count > 0)
        {
            <h4>Steps</h4>
            <div style="padding-left: 30px;">
                <table class="table">
                    <tbody>
                        @foreach (var step in Model.Road.RoadXRoadSteps)
                        {
                            <tr>
                                <td>@step.RoadStep.Name</td>
                                <td>@step.RoadStep.Description</td>
                                <td>
                                    @Html.ActionLink("Details", "Step", new { @id = step.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No roads yet!</p>
        }
    }
    <hr />
    <p class="text-success">Ask a question or suggest an improvement for this road:</p>
    @Html.ActionLink("Send message", "SendMessage", new { @roadId = Model.Road.Id }, new { @class = "btn btn-primary btn-lg" })
</div>